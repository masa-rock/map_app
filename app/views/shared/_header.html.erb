<header>
  <div class="header-container">
    <div class="header-links">
      <div class="header-left">
        <%= image_tag 'logo_3.png', class: "header-img" %>
      </div>
      <div class="header-right">
        <% if user_signed_in? %>
          <%= link_to 'ログアウト',destroy_user_session_path, method: :delete, class: "btn btn-danger btn-lg" %>
        <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary btn-lg" %>
          <%= link_to '新規登録', new_user_session_path, class: "btn btn-info btn-lg" %>
        <% end %>
      </div>
    </div>
    <% flash.each do |key, value| %>
      <%= content_tag(:div,value, class: "flash_#{key}") %>
    <% end %>
  </div>
</header>